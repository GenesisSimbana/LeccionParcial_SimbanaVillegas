@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <header class="bg-primary text-white py-3">
        <div class="container text-center">
            <h1 class="fw-bold">PRUEBA PRIMER PARCIAL</h1>
            <p class="mb-0">Aplicaciones Distribuidas</p>
        </div>
    </header>

    <div class="container d-flex flex-column justify-content-center align-items-center vh-100">

        <!-- Card para buscar producto -->
        <div class="card p-4 shadow-sm mb-4" style="width: 300px;">
            <h3 class="text-center mb-4">Buscar Producto</h3>

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="productId" class="form-label">ID de Producto:</label>
                    <input type="text" name="id" class="form-control" id="productId" />
                </div>
                <div class="d-grid">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </div>
            }

            <div class="d-grid mt-3">
                <a href="@Url.Action("CUDForm", "Home")" class="btn btn-secondary">CRUD Productos</a>
            </div>
        </div>

        <!-- Card para buscar categoría -->
        <div class="card p-4 shadow-sm" style="width: 300px;">
            <h3 class="text-center mb-4">Buscar Categoría</h3>

            @using (Html.BeginForm("CategoryDetails", "Home", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="categoryId" class="form-label">ID de Categoría:</label>
                    <input type="text" name="id" class="form-control" id="categoryId" />
                </div>
                <div class="d-grid">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </div>
            }

            <div class="d-grid mt-3">
                <a href="@Url.Action("CategoryCUD", "Home")" class="btn btn-secondary">CRUD Categorías</a>
            </div>
        </div>

    </div>

    <!-- Enlace a Bootstrap JS y Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
