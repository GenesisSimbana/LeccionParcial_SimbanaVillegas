@model Entities.Categories

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@(Model.CategoryID == 0 ? "Crear Categoría" : "Editar Categoría")</title>
    <!-- Enlace a Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <header class="bg-primary text-white py-3">
        <div class="container text-center">
            <h1 class="fw-bold">PRUEBA PRIMER PARCIAL</h1>
            <p class="mb-0">Aplicaciones Distribuidas</p>
        </div>
    </header>

    <div class="container mt-5">
        <h1 class="text-center mb-4">@(Model.CategoryID == 0 ? "Crear Categoría" : "Editar Categoría")</h1>

        @using (Html.BeginForm("CategoryCUD", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="mb-2">
                <label for="CategoryID" class="form-label">ID:</label>
                @if (Model.CategoryID == 0)
                {
                    <input type="text" name="CategoryID" class="form-control form-control-sm" id="CategoryID" />
                }
                else
                {
                    <span>@Model.CategoryID</span>
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                }
            </div>

            <div class="mb-2">
                <label for="CategoryName" class="form-label">Nombre de Categoría:</label>
                <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control form-control-sm" id="CategoryName" />
            </div>

            <div class="mb-2">
                <label for="Description" class="form-label">Descripción:</label>
                <input type="text" name="Description" value="@Model.Description" class="form-control form-control-sm" id="Description" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" name="CreateBtn" value="Create" class="btn btn-primary btn-sm">Crear</button>
                <button type="submit" name="UpdateBtn" value="Update" class="btn btn-warning btn-sm">Actualizar</button>
                <button type="submit" name="DeleteBtn" value="Delete" class="btn btn-danger btn-sm">Eliminar</button>
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.SuccessMessage</div>
        }

        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">INICIO</a>
        </div>
    </div>

    <!-- Enlace a Bootstrap JS y Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

