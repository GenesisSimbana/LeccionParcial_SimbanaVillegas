@model Entities.Products

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@(Model.ProductID == 0 ? "Crear Producto" : "Editar Producto")</title>
    <!-- Enlace a Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <header class="bg-primary text-white py-3">
        <div class="container text-center">
            <h1 class="fw-bold">PRUEBA PRIMER PARCIAL</h1>
            <p class="mb-0">Aplicaciones Distribuidas</p>
        </div>
    </header>

    <div class="container mt-5">
        <h1 class="text-center mb-4">@(Model.ProductID == 0 ? "Crear Producto" : "Editar Producto")</h1>

        @using (Html.BeginForm("CUD", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            <div class="mb-2">
                <label for="ProductID" class="form-label">ID:</label>
                @if (Model.ProductID == 0)
                {
                    <input type="text" name="ProductID" class="form-control form-control-sm" id="ProductID" />
                }
                else
                {
                    <span>@Model.ProductID</span>
                    <input type="hidden" name="ProductID" value="@Model.ProductID" />
                }
            </div>

            <div class="mb-2">
                <label for="ProductName" class="form-label">Nombre de Producto:</label>
                <input type="text" name="ProductName" value="@Model.ProductName" class="form-control form-control-sm" id="ProductName" />
            </div>

            <div class="mb-2">
                <label for="UnitPrice" class="form-label">Precio Unitario:</label>
                <input type="text" name="UnitPrice" value="@Model.UnitPrice" class="form-control form-control-sm" id="UnitPrice" />
            </div>

            <div class="mb-2">
                <label for="UnitsInStock" class="form-label">Unidades en Existencia:</label>
                <input type="text" name="UnitsInStock" value="@Model.UnitsInStock" class="form-control form-control-sm" id="UnitsInStock" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" name="CreateBtn" value="Create" class="btn btn-primary btn-sm">Crear</button>
                <button type="submit" name="UpdateBtn" value="Update" class="btn btn-warning btn-sm">Actualizar</button>
                <button type="submit" name="DeleteBtn" value="Delete" class="btn btn-danger btn-sm">Eliminar</button>
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.SuccessMessage</div>
        }

        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Regresar al Índice</a>
        </div>
    </div>

    <!-- Enlace a Bootstrap JS y Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

